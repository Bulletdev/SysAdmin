<!-- Registration Section -->
<section class="min-h-screen bg-gradient-to-br from-primary-50 to-accent-50 flex items-center justify-center px-4 py-12">
  <div class="max-w-md w-full">
    <!-- Logo and Title -->
    <div class="text-center mb-8 animate-fade-in">
      <div class="flex justify-center mb-4">
        <div class="w-16 h-16 bg-gradient-primary rounded-2xl flex items-center justify-center shadow-lg">
          <span class="text-white font-bold text-2xl">S</span>
        </div>
      </div>
      <h1 class="text-3xl font-bold font-lexend text-gray-900 mb-2">Criar Conta</h1>
      <p class="text-gray-600">Junte-se ao SysAdmin hoje</p>
    </div>

    <!-- Registration Card -->
    <div class="bg-white/80 backdrop-blur rounded-2xl shadow-2xl p-8 card-hover animate-slide-up">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Full Name Field -->
        <div class="space-y-2">
          <%= f.label :full_name, "Nome Completo", class: "block text-sm font-semibold text-gray-700" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <%= f.text_field :full_name, autofocus: true, autocomplete: "name",
                  class: "w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200 bg-white/50",
                  placeholder: "Seu nome completo" %>
          </div>
        </div>

        <!-- Email Field -->
        <div class="space-y-2">
          <%= f.label :email, "Email", class: "block text-sm font-semibold text-gray-700" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
              </svg>
            </div>
            <%= f.email_field :email, autocomplete: "email",
                  class: "w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200 bg-white/50",
                  placeholder: "seu@email.com" %>
          </div>
        </div>

        <!-- Password Field -->
        <div class="space-y-2">
          <%= f.label :password, "Senha", class: "block text-sm font-semibold text-gray-700" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500">Mínimo de <%= @minimum_password_length %> caracteres</p>
          <% end %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <%= f.password_field :password, autocomplete: "new-password",
                  class: "w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200 bg-white/50",
                  placeholder: "••••••••" %>
          </div>
        </div>

        <!-- Password Confirmation Field -->
        <div class="space-y-2">
          <%= f.label :password_confirmation, "Confirmar Senha", class: "block text-sm font-semibold text-gray-700" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "w-full pl-10 pr-3 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all duration-200 bg-white/50",
                  placeholder: "••••••••" %>
          </div>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Criar Conta", class: "w-full btn-primary text-white py-3 px-4 rounded-xl font-semibold text-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 cursor-pointer transition-all duration-200" %>
        </div>
      <% end %>

      <!-- Sign In Link -->
      <div class="mt-8 text-center">
        <%- if controller_name != 'sessions' %>
          <p class="text-sm text-gray-600">
            Já tem uma conta?
            <%= link_to "Entrar", new_session_path(resource_name), class: "font-medium text-primary-600 hover:text-primary-500 ml-1" %>
          </p>
        <% end %>
      </div>
    </div>

    <!-- Terms and Privacy -->
    <div class="mt-6 text-center text-xs text-gray-500 animate-slide-up" style="animation-delay: 0.3s;">
      <p>Ao criar uma conta, você concorda com nossos</p>
      <p class="mt-1">
        <%= link_to "Termos de Serviço", "#", class: "text-primary-600 hover:text-primary-500 font-medium" %>
        e
        <%= link_to "Política de Privacidade", "#", class: "text-primary-600 hover:text-primary-500 font-medium" %>
      </p>
    </div>
  </div>
</section>

<!-- Background Elements -->
<div class="fixed top-1/4 left-1/4 w-64 h-64 bg-primary-400/10 rounded-full filter blur-xl animate-float pointer-events-none"></div>
<div class="fixed bottom-1/4 right-1/4 w-96 h-96 bg-accent-400/10 rounded-full filter blur-xl animate-float pointer-events-none" style="animation-delay: 1s;"></div>