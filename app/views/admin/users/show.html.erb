<div class="min-h-screen bg-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <h1 class="text-xl font-semibold text-gray-900">SysAdmin</h1>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "Dashboard", admin_dashboard_path, class: "text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Users", admin_users_path, class: "bg-indigo-100 text-indigo-700 px-3 py-2 rounded-md text-sm font-medium" %>
<%= link_to "Profile", user_profile_path, class: "text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium" %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "bg-red-600 text-white px-3 py-2 rounded-md text-sm font-medium hover:bg-red-700" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex justify-between items-center">
          <h2 class="text-2xl font-bold text-gray-900">User Details</h2>
          <%= link_to "â† Back to Users", admin_users_path, class: "text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>

      <div class="px-6 py-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-medium text-gray-900 mb-4">Personal Information</h3>
            <div class="space-y-3">
              <div>
                <label class="block text-sm font-medium text-gray-700">Full Name</label>
                <p class="mt-1 text-sm text-gray-900"><%= @user.full_name %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Email</label>
                <p class="mt-1 text-sm text-gray-900"><%= @user.email %></p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Role</label>
                <p class="mt-1">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @user.admin? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
          <%= (@user.role.presence || 'no_admin').humanize %>
        </span>
                </p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Member Since</label>
                <p class="mt-1 text-sm text-gray-900"><%= @user.created_at.strftime("%B %d, %Y") %></p>
              </div>
            </div>
          </div>

          <div>
            <h3 class="text-lg font-medium text-gray-900 mb-4">Account Status</h3>
            <div class="space-y-3">
              <div>
                <label class="block text-sm font-medium text-gray-700">Account Status</label>
                <p class="mt-1 text-sm text-gray-900">Active</p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Last Sign In</label>
                <p class="mt-1 text-sm text-gray-900">
                  <% if @user.respond_to?(:last_sign_in_at) && @user.last_sign_in_at.present? %>
                    <%= @user.last_sign_in_at.strftime("%B %d, %Y at %I:%M %p") %>
                  <% else %>
                    Never
                  <% end %>
                </p>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700">Sign In Count</label>
                <p class="mt-1 text-sm text-gray-900">
                  <%= @user.respond_to?(:sign_in_count) ? @user.sign_in_count : "N/A" %>
                </p>
              </div>
            </div>
          </div>
        </div>

        <% if @user.avatar_image.present? %>
          <div class="mt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Avatar</h3>
            <%= image_tag @user.avatar_image, class: "w-32 h-32 rounded-full object-cover" %>
          </div>
        <% end %>

        <div class="mt-8 flex justify-end space-x-3">
          <%= link_to "Edit User", edit_admin_user_path(@user), class: "bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-indigo-700" %>
          <%= button_to "Toggle Role", toggle_role_admin_user_path(@user), method: :patch, 
                class: "bg-yellow-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-yellow-700" %>
          <%= button_to "Delete User", admin_user_path(@user), method: :delete, 
                data: { confirm: "Are you sure you want to delete this user?" },
                class: "bg-red-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-red-700" %>
        </div>
      </div>
    </div>
  </div>
</div>