<div class="min-h-screen bg-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-lg">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex justify-between items-center py-4">
        <div class="flex items-center">
          <h1 class="text-xl font-bold text-gray-800">Admin Dashboard</h1>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "Users", admin_users_path, class: "text-gray-600 hover:text-gray-800 px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Profile", user_profile_path, class: "text-gray-600 hover:text-gray-800 px-3 py-2 rounded-md text-sm font-medium" %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "text-gray-600 hover:text-gray-800 px-3 py-2 rounded-md text-sm font-medium" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Dashboard Section -->
  <section class="py-12 bg-gradient-to-br from-primary-50 to-accent-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8"
         data-controller="charts"
         data-charts-growth-labels-value='<%= @user_growth_labels.to_json %>'
         data-charts-growth-series-value='<%= @user_growth_series.to_json %>'
         data-charts-role-labels-value='<%= @users_by_job_role.keys.to_json %>'
         data-charts-role-series-value='<%= @users_by_job_role.values.to_json %>'
         data-charts-dept-labels-value='<%= @users_by_department.keys.to_json %>'
         data-charts-dept-series-value='<%= @users_by_department.values.to_json %>'>
      <!-- Header -->
      <div class="mb-8 animate-fade-in">
        <h1 class="text-4xl font-bold font-lexend text-gray-900 mb-2">Dashboard</h1>
        <p class="text-gray-600">Bem-vindo ao seu painel de controle, <strong><%= current_user.full_name %></strong>!</p>
      </div>
      
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Users Card -->
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <div class="flex items-center">
            <div class="p-3 rounded-full bg-blue-100 text-blue-600">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
            </div>
            <div class="ml-4">
              <h2 class="text-gray-600 text-sm font-medium">Total de Usuários</h2>
              <p class="text-2xl font-bold text-gray-900"><%= @total_users %></p>
              <p class="text-xs text-green-600 mt-1">+12% este mês</p>
            </div>
          </div>
        </div>

        <!-- Admin Users Card -->
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <div class="flex items-center">
            <div class="p-3 rounded-full bg-green-100 text-green-600">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-4">
              <h2 class="text-gray-600 text-sm font-medium">Administradores</h2>
              <p class="text-2xl font-bold text-gray-900"><%= @users_by_role['admin'] || 0 %></p>
              <p class="text-xs text-gray-500 mt-1"><%= number_to_percentage(((@users_by_role['admin'] || 0).to_f / @total_users * 100), precision: 1) %> do total</p>
            </div>
          </div>
        </div>

        <!-- Regular Users Card -->
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <div class="flex items-center">
            <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
            </div>
            <div class="ml-4">
              <h2 class="text-gray-600 text-sm font-medium">Usuários Comuns</h2>
              <p class="text-2xl font-bold text-gray-900"><%= @users_by_role['no_admin'] || 0 %></p>
              <p class="text-xs text-gray-500 mt-1"><%= number_to_percentage(((@users_by_role['no_admin'] || 0).to_f / @total_users * 100), precision: 1) %> do total</p>
            </div>
          </div>
        </div>

        <!-- Active Today Card -->
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <div class="flex items-center">
            <div class="p-3 rounded-full bg-purple-100 text-purple-600">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-4">
              <h2 class="text-gray-600 text-sm font-medium">Ativos Hoje</h2>
              <p class="text-2xl font-bold text-gray-900"><%= @active_today || 0 %></p>
              <p class="text-xs text-blue-600 mt-1">últimas 24h</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Charts Section -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <!-- User Growth Chart -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Crescimento de Usuários</h3>
            <div class="text-sm text-gray-500">Últimos 6 meses</div>
          </div>
          <canvas id="userGrowthChart" width="400" height="200"></canvas>
        </div>

        <!-- Job Role Distribution Chart -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Distribuição por Função</h3>
            <div class="text-sm text-gray-500">Total: <%= @total_users %></div>
          </div>
          <canvas id="roleDistributionChart" width="400" height="200"></canvas>
        </div>
      </div>

      <!-- Department Distribution Chart -->
      <div class="grid grid-cols-1 gap-8 mb-8">
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Distribuição por Setor</h3>
            <div class="text-sm text-gray-500">Total: <%= @total_users %></div>
          </div>
          <canvas id="departmentDistributionChart" width="400" height="220"></canvas>
        </div>
      </div>

      <!-- Recent Activity & Quick Actions -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Recent Activity -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Atividade Recente</h3>
            <span class="text-sm text-gray-500">Últimas 5 ações</span>
          </div>
          <div class="space-y-3">
            <div class="flex items-center p-3 bg-gray-50 rounded-lg">
              <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-900">Novo usuário registrado</p>
                <p class="text-xs text-gray-500">Há 2 horas</p>
              </div>
            </div>
            <div class="flex items-center p-3 bg-gray-50 rounded-lg">
              <div class="w-2 h-2 bg-blue-500 rounded-full mr-3"></div>
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-900">Login realizado</p>
                <p class="text-xs text-gray-500">Há 4 horas</p>
              </div>
            </div>
            <div class="flex items-center p-3 bg-gray-50 rounded-lg">
              <div class="w-2 h-2 bg-yellow-500 rounded-full mr-3"></div>
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-900">Perfil atualizado</p>
                <p class="text-xs text-gray-500">Há 6 horas</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Ações Rápidas</h3>
          <div class="space-y-3">
            <%= link_to admin_users_path, class: "flex items-center p-3 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors" do %>
              <svg class="w-5 h-5 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
              <span class="text-sm font-medium text-blue-900">Gerenciar Usuários</span>
            <% end %>
            <%= link_to new_admin_user_path, class: "flex items-center p-3 bg-green-50 rounded-lg hover:bg-green-100 transition-colors" do %>
              <svg class="w-5 h-5 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
              </svg>
              <span class="text-sm font-medium text-green-900">Criar Novo Usuário</span>
            <% end %>
            <%= link_to user_profile_path, class: "flex items-center p-3 bg-purple-50 rounded-lg hover:bg-purple-100 transition-colors" do %>
              <svg class="w-5 h-5 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <span class="text-sm font-medium text-purple-900">Meu Perfil</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- Gráficos inicializados via Stimulus (controllers/charts_controller.js) -->