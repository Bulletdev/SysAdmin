<div class="min-h-screen bg-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-lg">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex justify-between items-center py-4">
        <div class="flex items-center">
          <h1 class="text-xl font-bold text-gray-800">My Profile</h1>
        </div>
        <div class="flex items-center space-x-4">
<%= link_to "Edit Profile", edit_user_profile_path, class: "text-gray-600 hover:text-gray-800 px-3 py-2 rounded-md text-sm font-medium" %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "text-gray-600 hover:text-gray-800 px-3 py-2 rounded-md text-sm font-medium" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="max-w-4xl mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="px-6 py-4 bg-gray-50 border-b">
        <h2 class="text-xl font-semibold text-gray-900">Profile Information</h2>
      </div>
      
      <div class="p-6">
        <div class="flex items-center mb-6">
          <% if @user.avatar_image.present? %>
            <%= image_tag @user.avatar_image, class: "w-20 h-20 rounded-full object-cover mr-4" %>
          <% else %>
            <div class="w-20 h-20 bg-gray-300 rounded-full flex items-center justify-center mr-4">
              <span class="text-gray-600 text-2xl font-bold"><%= @user.full_name.split.first[0].upcase %></span>
            </div>
          <% end %>
          <div>
            <h3 class="text-2xl font-bold text-gray-900"><%= @user.full_name %></h3>
            <p class="text-gray-600"><%= @user.email %></p>
            <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full <%= @user.admin? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
              <%= @user.admin? ? 'Admin' : 'User' %>
            </span>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h4 class="text-lg font-medium text-gray-900 mb-2">Account Details</h4>
            <div class="space-y-2">
              <p class="text-sm text-gray-600">
                <strong>Full Name:</strong> <%= @user.full_name %>
              </p>
              <p class="text-sm text-gray-600">
                <strong>Email:</strong> <%= @user.email %>
              </p>
              <p class="text-sm text-gray-600">
        <strong>Role:</strong> <%= @user.admin? ? 'Admin' : 'User' %>
              </p>
              <p class="text-sm text-gray-600">
                <strong>Cargo:</strong> <%= @user.job_role.presence || 'Não informado' %>
              </p>
              <p class="text-sm text-gray-600">
                <strong>Setor:</strong> <%= @user.department.presence || 'Não informado' %>
              </p>
              <p class="text-sm text-gray-600">
                <strong>Member Since:</strong> <%= @user.created_at.strftime("%B %d, %Y") %>
              </p>
            </div>
          </div>

          <div>
            <h4 class="text-lg font-medium text-gray-900 mb-2">Actions</h4>
            <div class="space-y-2">
<%= link_to "Edit Profile", edit_user_profile_path, class: "block w-full text-center bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 transition duration-200" %>
              <%= link_to "Change Password", edit_user_registration_path, class: "block w-full text-center bg-gray-600 text-white py-2 px-4 rounded-md hover:bg-gray-700 transition duration-200" %>
              <% if current_user == @user %>
<%= button_to "Delete Account", user_profile_path, method: :delete,
                              data: { confirm: "Are you sure you want to delete your account? This action cannot be undone." },
                              class: "block w-full text-center bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 transition duration-200" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>