<div class="min-h-screen bg-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-lg">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex justify-between items-center py-4">
        <div class="flex items-center">
          <h1 class="text-xl font-bold text-gray-800">Edit Profile</h1>
        </div>
        <div class="flex items-center space-x-4">
<%= link_to "Back to Profile", user_profile_path, class: "text-gray-600 hover:text-gray-800 px-3 py-2 rounded-md text-sm font-medium" %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "text-gray-600 hover:text-gray-800 px-3 py-2 rounded-md text-sm font-medium" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="max-w-2xl mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="px-6 py-4 bg-gray-50 border-b">
        <h2 class="text-xl font-semibold text-gray-900">Edit Profile</h2>
      </div>
      
<%= form_with(model: @user, url: user_profile_path, method: :patch, data: { turbo: false }, html: { class: "p-6 space-y-6" }) do |form| %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :full_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :full_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div>
          <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div>
          <%= form.label :avatar_image, "Avatar Image URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :avatar_image, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <% if current_user.admin? %>
          <div>
            <%= form.label :role, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :role, options_for_select([['Regular User', 'no_admin'], ['Admin', 'admin']], @user.role), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
        <% end %>

        <div class="flex items-center justify-between">
<%= link_to "Cancel", user_profile_path, class: "bg-gray-300 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-400 transition duration-200" %>
          <%= form.submit "Update Profile", class: "bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 transition duration-200 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>